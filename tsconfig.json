{
  "compilerOptions": {
    "target": "ES2020",               // Modern JS features, adjust if needed
    "module": "NodeNext",             // Use Nodeâ€™s ES module system
    "moduleResolution": "NodeNext",   // Match module system with resolution
    "esModuleInterop": true,          // Enable interop between CommonJS and ES modules
    "forceConsistentCasingInFileNames": true, // Catch casing issues
    "strict": true,                   // Enable strict type checking
    "skipLibCheck": true,             // Skip checking node_modules for faster builds
    "outDir": "./dist",               // Compiled JS output folder
    "resolveJsonModule": true,        // Allow importing JSON files
    "sourceMap": true                 // Generate source maps for debugging
  },
  "include": ["server.ts", "**/*.ts"], // Include your TS files here
  "exclude": ["node_modules", "dist"]  // Exclude these folders
}
